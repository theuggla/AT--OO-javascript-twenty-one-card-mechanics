<h1>Issues for {{user.preferedRep.name}}</h1>
<div id="issuepage">
<div id="issueview">
{{#each issues}}
<div class="issue">
    <div id="info">
        <h2>{{title}}</h2>
        <div id="timestamps">
            <p>updated at {{updatedAt}}</p>
            <p>created at {{createdAt}}</p>
        </div>
        <p>{{body}}</p>
        <p>{{comments}} comments</p>
    </div>
    <div id="user">
        <p>by {{user.username}}</p><img src="{{user.avatar}}" />
    </div>
</div>
{{/each}}
</div>

<div id="happenings">
<template id="eventTemplate">
    <div class="event">
        <div id="info">
            <h2></h2>
            <p id="eventdata"></p>
        </div>
        <div id="userinfo">
            <p></p><img src="" />
        </div>
    </div>
</template>
</div>
</div>