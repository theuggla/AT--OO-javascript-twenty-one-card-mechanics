<h1>Issues for {{user.preferedRep.name}}</h1>
<div id="issuepage">
<div id="issueview">
    <a href="" is="addissue">add issue</a>
{{#each issues}}
<div class="issue">
    <div id="info">
        <h2>{{title}}</h2>
        <div id="timestamps">
            <p>updated at {{updatedAt}}</p>
            <p>created at {{createdAt}}</p>
        </div>
        <p>{{body}}</p>
        <a href="" id="viewcomments">{{comments}} comments</a>
    </div>
    <div id="user">
        <a href="" id="closeissue">close</a>
        <a href="" id="editissue">edit</a>
        <p>by {{user.username}}</p><img src="{{user.avatar}}" />
    </div>
</div>
{{/each}}
</div>
<div id="happenings">
    <template id="eventTemplate">
        <div class="event">
        </div>
    </template>
</div>
</div>